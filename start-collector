import sys
if len(sys.argv) < 2:
    print 'Tell me which house!'
    sys.exit(1)

import os
appdir = os.path.dirname(__file__)
if not appdir:
    appdir = '.'
appdir = os.path.abspath(appdir)

if os.environ.has_key('PYTHONPATH'):
    os.environ['PYTHONPATH'] = '%s:' % (appdir) + os.environ['PYTHONPATH']
else:
    os.environ['PYTHONPATH'] = '%s:' % (appdir)

os.execve(sys.executable, [sys.executable, os.path.join(appdir, 'collector', 'collector.py'), '--source', sys.argv[1]], os.environ)

